<%= form_with(model: @stylist, url: stylists_path, local: true) do |f| %>
 
  <div class="field">
    <%= f.label :氏名 %><br />
    <%= f.text_field :name %>
  </div>
 
  <div class="field">
    <%= f.label :住所 %><br />
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :TEL %><br />
    <%= f.text_field :phone_number %>
  </div>
  <div class="field">
    <%= f.label :年齢 %><br />
    <%= select_tag(:age, options_for_select((18..50).to_a)) %>
  </div>  
  <div class="field">
    <%= f.label :年齢を非表示にする %>
    <%= f.check_box :hide_age %> 
    </div> 
  <div class="field">
    <%= f.label :性別 %><br />
    <%= f.label :男  %>
    <%= f.radio_button :gender, :man %>
    <%= f.label :女  %>
    <%= f.radio_button :gender, :woman %>
  </div>
  <div class="field">
      <%= f.label :性別を非表示にする %>
      <%= f.check_box :hide_gender %>
    </div> 
  　<div class="field">
      <%= f.label :プロフィール写真 %> 
      <%= f.file_field :icon %>　
      <%= f.hidden_field :id %>
    </div>
    <div class="field">
      <%= f.label :スタイリストとしてのアピールポイント %>
      <%= f.text_area :content %>
    </div>
  
    <div class="actions">
      <%= f.submit %>
    </div>
    
<% end %>